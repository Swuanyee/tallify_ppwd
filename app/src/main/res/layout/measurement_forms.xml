<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_wxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_w"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Width" />

            <EditText
                android:id="@+id/input_w"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/text_t"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thickness" />

            <EditText
                android:id="@+id/input_t"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_addLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Length" />

        <LinearLayout
            android:id="@+id/container_length"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerPadding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_l"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L" />

            <EditText
                android:id="@+id/input_l"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_a"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="A" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="B" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:id="@+id/btn_q"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="Q" />

            <Button
                android:id="@+id/btn_r"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="R" />

            <Button
                android:id="@+id/btn_u"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="U" />

            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
